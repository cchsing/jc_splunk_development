<form version="1.1" theme="light">
  <label>PDF Report Generation</label>
  <search id="search_events_0">
    <query>
index=*
| fields *
    </query>
    <earliest>$global_time.earliest$</earliest>
    <latest>$global_time.latest$</latest>
  </search>
  <search id="search_events_1">
    <query>
index=* $multiselect_sourcetype$
| fields *
    </query>
    <earliest>$global_time.earliest$</earliest>
    <latest>$global_time.latest$</latest>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="global_time" searchWhenChanged="false">
      <label>Time</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
      <change>
        <eval token="global_time.earliest_epoch">if(isnum('earliest'),'earliest',relative_time(now(),'earliest')</eval>
        <eval token="global_time.latest_epoch">if(isnum('latest'),'latest',relative_time(now(),'latest')</eval>
      </change>
    </input>
    <input type="multiselect" token="multiselect_sourcetype" id="multiselect_sourcetype">
      <label>Sourcetype</label>
      <choice value="*">All</choice>
      <default>*</default>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <valuePrefix>sourcetype="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <search base="search_events_0">
        <query>
| dedup sourcetype
| table sourcetype
        </query>
      </search>
      <fieldForLabel>sourcetype</fieldForLabel>
      <fieldForValue>sourcetype</fieldForValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Indexes with Data</title>
        <search base="search_events_1">
          <query>| stats dc(index) as count</query>
        </search>
        <option name="drilldown">none</option>
      </single>
    </panel>
    <panel>
      <chart id="chart1">
        <search base="search_events_1">
          <query>| stats dc(sourcetype) as count by index</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
</form>